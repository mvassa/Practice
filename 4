#include "pch.h"
#include <iostream>

using namespace std;

int* swap(int *ab, int x);
void abc(int *ab, int x);

int main()
{
	int s = 12;
	int*a = new int[s];
  
	for (int i = 0; i < s; i++)
  {
		a[i] = i + 1;
	}
  
	swap(a, s);
	display(a, s);
	delete[]a;
  
  system("pause");
	return 0;
}

int* swap(int* ab, int x)
{		
	for (int i = 0; i < x - 1; i++)
  {
		if (i % 2 == 0)
    {
			int t = ab[i];
			ab[i] = ab[i + 1];
			ab[i + 1] = t;
		}
	}
	return ab;
}

void abc(int *ab, int x)
{	
	for (int i = 0; i < x; i++)
		cout << "a[" << i << "]=" << ab[i] << endl;
}
