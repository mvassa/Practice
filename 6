#include "pch.h"
#include <iostream>

using namespace std;

class Property{
	protected:
		double ab;
	public:
		Property() {}
		virtual double tax() = 0;
	
};
class Kv : public Property {
	public:
		Kv(double a) { a = a; }
		double tax()
    {
			return ab / 1000;
		}
};

class Car : public Property {
	public:
		Car (double a) { ab = a; }
		double tax()
    {
			return ab / 500;
		}
};

class Dacha : public Property {
	public:
		Dacha(double a) { ab = a; }
		double tax()
    {
			return ab / 1000;
		}
};

int main(int argc, char* argv[])
{
	setlocale(LC_ALL, "Russian");
  
	Property **a = new Property*[7];
	a[0] = new Kv(1000000);
	a[1] = new Kv(500000);
	a[2] = new Kv(100000);
	a[3] = new Car(20000.5);
	a[4] = new Car(2000.12);
	a[5] = new Dacha(1000000);
	a[6] = new Dacha(5000000);
  
	for (int i = 0; i < 7; i++)
  {
		cout << "Налог на имущество составляет: " << a[i]->tax() << endl;
	}
  
	for (int i = 0; i < 7; i++)
  {
    delete a[i];
  }
  
	delete[] a;
  
	system("pause");
	return 0;
}
