#include <iostream>
#include <fstream>
#include <string>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    
    ofstream file;
    string n;
    
    file.open("file.txt");
    cout << "Введите текст: " << endl;
    getline(cin, n);
    file << n;
    file.close();
    
    system("pause");
    return 0;
}
